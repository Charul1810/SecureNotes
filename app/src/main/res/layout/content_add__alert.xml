<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.securenotes.Add_Alert"
    tools:showIn="@layout/activity_add__alert">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alert_title_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="4dp"
        >

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:editable="true"
            android:background="@android:color/transparent"
            android:hint="@string/title"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alert_reminder_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="4dp"
        >

        <EditText
            android:id="@+id/reminder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="start"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:editable="true"
            android:background="@android:color/transparent"
            android:hint="Reminder"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alert_setting_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="4dp"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alertSettings"
            android:layout_below="@+id/alertContent"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
